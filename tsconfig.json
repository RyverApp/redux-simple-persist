{
    "compileOnSave": false,
    "compilerOptions": {     
        "strict": true,         
        "declaration": true,                           
        "newLine": "LF",
        "jsx": "preserve",
        "target": "es2016",
        "module": "esnext",
        "moduleResolution": "node",        
        "esModuleInterop": true,
        "rootDir": "./src",                
        "baseUrl": "./src",
        "outDir": "./build",      
        "sourceMap": true,
        "skipLibCheck": true,        
        "importHelpers": true,                                       
        "forceConsistentCasingInFileNames": true,        
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "types": [
            "node"
        ]
    },    
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "typings/**/*.d.ts",
        "package.json"
    ]     
}